{
  "compilerOptions": {
    "skipLibCheck": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "./dist/",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "./node_modules"
  ],
  "include": [
    "./src/**/*.ts"
  ]
}
